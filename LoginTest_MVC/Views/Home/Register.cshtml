<form asp-action="Register" asp-controller="Home" method="post">

    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">账号</label>
        <input type="text" class="form-control" id="" name="Username" placeholder="请输入账号">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">密码</label>
        <input type="password" class="form-control" id="" name="Password" placeholder="请输入密码">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">确认密码</label>
        <input type="password" class="form-control" id="" name="Password2" placeholder="请输入密码">
    </div>
    @if (@ViewBag.Error != null)
    {
        <div class="alert alert-primary" role="alert">
            两次密码不一致
        </div>
    }
    @if (@ViewBag.Success != null)
    {
        <div class="modal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">注册成功</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>点击确定跳转到学生列表.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">关闭窗口</button>
                        <button type="button" class="btn btn-primary">跳转</button>
                    </div>
                </div>
            </div>
        </div>
    }
    <button type="submit" class="btn btn-primary">注册</button>
</form>
</body>
</html>